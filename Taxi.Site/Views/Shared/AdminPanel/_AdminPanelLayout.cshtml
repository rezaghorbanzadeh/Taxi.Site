<!DOCTYPE html>

<html lang="en"
      class="light-style layout-navbar-fixed layout-menu-fixed"
      dir="rtl"
      data-theme="theme-default"
      data-assets-path="/AdminPanel/assets/"
      data-template="vertical-menu-template-starter">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>@ViewBag.Title</title>

    <partial name="~/Views/Shared/AdminPanel/_AdminPanelStyle.cshtml" />

    @RenderSection("style", false)

    <!-- JS here -->
    <partial name="~/Views/Shared/AdminPanel/_AdminScriptHead.cshtml" />

    @RenderSection("scriptsHead", false)
</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->
            <partial name="~/Views/Shared/AdminPanel/_LayoutPage.cshtml" />
            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->

                <partial name="~/Views/Shared/AdminPanel/_Navbar.cshtml" />
                <!-- / Navbar -->
                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->
                    @RenderBody()
                  
                    <!-- / Content -->



                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>

        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>

        <!-- Drag Target Area To SlideIn Menu On Small Screens -->
        <div class="drag-target"></div>
    </div>
    <!-- / Layout wrapper -->
    <!-- Core JS -->
    <partial name="~/Views/Shared/AdminPanel/_AdminScript.cshtml" />
    @RenderSection("scripts", false)



</body>
</html>

