@model IEnumerable<Taxi.DataAccessLayer.Entites.Discount>

@{
    ViewData["Title"] = "‌لیست کوپن های تخفیف ها";
    Layout = "~/Views/Shared/AdminPanel/_AdminPanelLayout.cshtml";
}

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-2"><span class="text-muted fw-light">لیست /</span> ماشین ها</h4><br />
        <a asp-controller="CarColor" asp-action="Create" class="btn btn-light mb-2 btn-sm ">اضافه کردن ماشین</a>

        <!-- Invoice List Table -->
        <div class="card" dir="rtl">
            <div class="card-datatable table-responsive">
                <table class="table border-top">
                    <thead>
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(Model => Model.Name)</th>
                            <th scope="col">@Html.DisplayNameFor(Model => Model.Code)</th>
                            <th scope="col">@Html.DisplayNameFor(Model => Model.Price)</th>
                            <th scope="col">@Html.DisplayNameFor(Model => Model.Percent)</th>
                            <th scope="col">@Html.DisplayNameFor(Model => Model.Desc)</th>
                            <th scope="col">@Html.DisplayNameFor(Model => Model.Start)</th>
                            <th scope="col">@Html.DisplayNameFor(Model => Model.Expire)</th>
                            <th scope="col" class="text-center mr-3">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(Model => item.Name)</td>
                                <td>@Html.DisplayFor(Model => item.Code)</td>
                                <td>@Html.DisplayFor(Model => item.Price)</td>
                                <td>@Html.DisplayFor(Model => item.Percent)</td>
                                <td>@Html.DisplayFor(Model => item.Desc)</td>
                                <td>@Html.DisplayFor(Model => item.Start)</td>
                                <td>@Html.DisplayFor(Model => item.Expire)</td>
                               
                                <td class="text-center">
                                    <a href="/Discount/Delete/@item.Id" class="btn btn-danger ms-1">حذف</a>
                                    <a href="/Discount/Edite/@item.Id" class="btn btn-warning">ویرایش</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- / Content -->



    <div class="content-backdrop fade"></div>
</div>
