@model Taxi.Core.ViewModels.AdminPanel.RoleViewModel

@{
	ViewData["Title"] = "‌اضافه کردن  ماشین ";
	Layout = "~/Views/Shared/AdminPanel/_AdminPanelLayout.cshtml";
}
<div class="content-wrapper">
	<!-- Content -->

	<div class="container-xxl flex-grow-1 container-p-y">
		<div class="row">
			<div class="col-xl">
				<div class="card mb-4">
					<div class="card-header d-flex justify-content-between align-items-center">
						<small class="text-muted float-end">اضافه کردن </small>
					</div>
					<div class="card-body">
						<form method="post" asp-action="Create" asp-controller="Role">
							<div class="mb-3">
								<label class="form-label" for="basic-default-fullname">نام نقش</label>
								<input name="Name" type="text" class="form-control" id="basic-default-fullname" placeholder=" نقش اول " />
							</div>
							<div class="mb-3">
								<label class="form-label" for="basic-default-fullname">عنوان نقش</label>
								<input name="Title" type="text" class="form-control" id="basic-default-fullname" placeholder=" مدیر  " />
							</div>
							<button type="submit" class="btn btn-primary">ثبت</button>
						</form>
					</div>
				</div>
			</div>
			
		</div>
	</div>
</div>

