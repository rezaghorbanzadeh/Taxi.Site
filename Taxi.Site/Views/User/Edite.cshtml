@model Taxi.Core.ViewModels.AdminPanel.UserEditViewModel

@{
	ViewData["Title"] = "‌اضافه کردن  ماشین ";
	Layout = "~/Views/Shared/AdminPanel/_AdminPanelLayout.cshtml";
}
<div class="content-wrapper">
	<!-- Content -->
	<div class="container-xxl flex-grow-1 container-p-y">
		<div class="row">
			<div class="col-xl">
				<div class="card mb-4">
					<div class="card-header d-flex justify-content-between align-items-center">
						<small class="text-muted float-end">اضافه کردن </small>
					</div>
					<div class="card-body">
						<form method="post" asp-action="Edite" asp-controller="User">
							<div class="mb-3">
								<label class="form-label"> شماره</label>
								<input name="UserName" type="text" class="form-control" value="@Model.UserName" />
							</div>
							<div class="mb-3">
								<label asp-for="BirthDate" class="form-label"> </label>
								<input asp-for="BirthDate" type="text" class="form-control" value="@Model.BirthDate" />
							</div>
							<div class="mb-3">
								<label asp-for="FullName" class="form-label"> </label>
								<input asp-for="FullName" type="text" class="form-control" value="@Model.FullName" />
							</div>
							<div class="mb-3">
								<label class="form-label">نام نقش</label>
								<select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control" onselect="@Model.RoleId">
								</select>
							</div>
							<div class="mb-3">
								<label class="form-label"> فعال/غیر فعال</label>
								<input name="IsActive" type="checkbox" value="true" />
							</div>
							<button type="submit" class="btn btn-primary">ثبت</button>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

