@model Taxi.Core.ViewModels.AdminPanel.DriverImgViewModel

@{
	ViewData["Title"] = "‌ویرایش اطلاعات";
	Layout = "~/Views/Shared/AdminPanel/_AdminPanelLayout.cshtml";
}
<div class="content-wrapper">
	<!-- Content -->

	<div class="container-xxl flex-grow-1 container-p-y">
		<div class="row">
			<div class="col-xl">
				<div class="card mb-4">
					<div class="card-header d-flex justify-content-between align-items-center">
						<small class="text-muted float-end">اضافه کردن </small>
					</div>
					<div class="card-body">
						<form method="post" asp-action="DriverCertificate" asp-controller="User" enctype="multipart/form-data">

							<div class="mb-3">
								<label class="form-label">  تایید  </label>
								<input name="IsConfirm" type="checkbox"  value="@Model.IsConfirm " />
							</div>
							<div class="mb-3">
								<label class="form-label">  </label>
								<input name="Img" type="file" value="true" />
								<br />
								<img src="~/img/driver/@Model." alt="Alternate Text" width="300" height="300" />
							</div>
							<button type="submit" class="btn btn-primary">ثبت</button>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

