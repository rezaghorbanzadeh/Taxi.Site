@model Taxi.Core.ViewModels.AdminPanel.DriverPropViewModel

@{
	ViewData["Title"] = "‌ویرایش اطلاعات";
	Layout = "~/Views/Shared/AdminPanel/_AdminPanelLayout.cshtml";
}
<div class="content-wrapper">
	<!-- Content -->

	<div class="container-xxl flex-grow-1 container-p-y">
		<div class="row">
			<div class="col-xl">
				<div class="card mb-4">
					<div class="card-header d-flex justify-content-between align-items-center">
						<small class="text-muted float-end">اضافه کردن </small>
					</div>
					<div class="card-body">
						<form method="post" asp-action="DriverProp" asp-controller="User" enctype="multipart/form-data">
							<div class="mb-3">
								<label class="form-label"> کد ملی</label>
								<input name="NatinalCode" type="text" class="form-control" value="@Model.NatinalCode" />
							</div>	
							<div class="mb-3">
								<label class="form-label"> شماره</label>
								<input name="Tel" type="number" class="form-control" value="@Model.Tel" />
							</div>
							<div class="mb-3">
								<label for="Address">ادرس</label>

								<textarea name="Address" rows="5" cols="33" class="form-control" >
									@Model.Address
								</textarea>
							</div>

							<div class="mb-3">
								<label class="form-label"> فعال/غیر فعال</label>
								<input name="Avatar" type="file" value="true" />
								<br />
								<img src="~/img/driver/@Model.AvatarName" alt="Alternate Text" width="300" height="300" />
							</div>
							<button type="submit" class="btn btn-primary">ثبت</button>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

